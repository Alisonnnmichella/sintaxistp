//Alg 2 para metaER [A-Z]+C|[0-9]{2}[a-z]
#include<stdio.h>
#include<conio.h>
#include<stdbool.h>
int getState(int s,char c);
int reconocedor(char* cadena);
char valorDeVerdad(int a);
int main(){
char cadena[20];
printf("Ingresar cadena: \n");
gets(cadena);
int c=reconocedor(cadena);
char a=valorDeVerdad(c);
printf("Es la cadena una palabra?: %c \n ",a);

	
}


char valorDeVerdad(int a){
	if(a==0) {return 'F';}
	else{return 'V';} ;
	
}


int reconocedor(char* cadena){
	int i=0;
	int st=0;
	int state_F=1;
	
	while(cadena[i]!=NULL){
		
		st=getState(st, cadena[i]);
		if(st==4 ||cadena[i+1]==NULL){
			break;
		}
		i++;}
	if(st==state_F) {return 1;}
	else{ return 0;}
	}
	



int getState(int s,char c){
	int st [5][3]={{1,2,4},
				   {4,4,4},
				   {4,3,4},
				   {4,4,1},
				   {4,4,4}}; 
	
	
	switch(s){
		case 0: 
				if(c>='A'&&c<='Z'){
					return st[0][0];}
				else if(c>='0'&&c<='9'){
					return st[0][1];	
				}
				else if(c>='a'&&c<='z'){
				return st[0][2];
				}
					
	
		case 1: if(c>='A'&&c<='Z'){
					return st[1][0];}
				else if(c>='0'&&c<='9'){
					return st[1][1];	
				}
				else if(c>='a'&&c<='z'){
				return st[1][2];}

		case 2: if(c>='A'&&c<='Z'){
					return st[2][0];}
				else if(c>='0'&&c<='9'){
					return st[2][1];	
				}
				else if(c>='a'&&c<='z'){
				return st[2][2];}

		
		case 3: 
				 if(c>='A'&&c<='Z'){
					return st[3][0];}
				else if(c>='0'&&c<='9'){
					return st[3][1];	
				}
				else if(c>='a'&&c<='z'){
				return st[3][2];}
		case 4:  if(c>='A'&&c<='Z'){
					return st[4][0];}
				else if(c>='0'&&c<='9'){
					return st[4][1];	
				}
				else if(c>='a'&&c<='z'){
				return st[4][2];}	}
			}
